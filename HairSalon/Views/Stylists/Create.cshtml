@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add New Stylist</h4>
<hr/>
@using (Html.BeginForm())
{
  @Html.TextBoxFor(model => model.Name, new {autofocus="autofocus", required="required", @class="text-input", placeholder="Stylist Name"})
  <br>

  @Html.LabelFor(model => model.HireDate)
  @Html.TextBox("hireDate", null, new {type="date"})
  <br>
  @Html.DropDownList("SpecialtyId")
  <br>
  @Html.HiddenFor(model => model.TerminationDate, null)
  @Html.HiddenFor(model => model.RehireDate, null)
  <input type="submit" value="Add this stylist" class="btn btn-primary" />
  
}

<br>
<p>@Html.ActionLink("Show all stylists", "Index")</p>