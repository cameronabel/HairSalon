@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Appointments</h1>
<hr/>

@if (@Model.Count == 0)
{
  <h3>No appointments added yet!</h3>
}

@foreach (Appointment appointment in Model)
{
  <li>@Html.ActionLink($"{appointment.Client.Name} - {appointment.DateTime}", "Details", new {id = appointment.AppointmentId})</li>
}
<br>
<p>@Html.ActionLink("Schedule an appointment", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>