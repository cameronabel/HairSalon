@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add New Client</h4>
<hr/>
@using (Html.BeginForm())
{
  @Html.TextBoxFor(model => model.Name, new {required="required", @class="text-input", placeholder="Client Name"})
  <span class="validity"></span>
  <br>
  @Html.TextBoxFor(model => model.Phone, new {type="tel", pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}", required="required", @class="text-input", placeholder="Phone (xxx-xxx-xxxx)"})
  <span class="validity"></span>
  <br>
  @Html.TextBoxFor(model => model.Email, new {type="email", required="required", @class="text-input", placeholder="email@example.com"})
  <span class="validity"></span>
  <br>
  <input type="submit" value="Add this client" class="btn btn-primary" />
}

<br>
<p>@Html.ActionLink("Show all clients", "Index")</p>