@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
@using HairSalon.Models

<h2>Client Details</h2>
<hr />
<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>
<h4>@Html.DisplayNameFor(model => model.Phone): @Html.DisplayFor(model => model.Phone)</h4>
<h4>@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)</h4>
<br>

@if (@Model.Appointments.Count == 0)
{
  <h5>No appointments have been booked for this client yet!</h5>
  <p>@Html.ActionLink("Book an appointment", "Create", "Appointments", new {id = Model.ClientId})</p>
}
else
{
  <h3>Appointments</h3>
  <ul>
    @foreach (Appointment appointment in Model.Appointments)
    {
      <li>@Html.ActionLink($"{appointment.DateTime}", "Details", "Appointments", new {id = appointment.AppointmentId})</li>
    }
  </ul>
}
<br>
<p>@Html.ActionLink("Edit Client", "Edit", null, new { id = Model.ClientId})</p>
<p>@Html.ActionLink("Delete Client", "Delete", null, new { id = Model.ClientId})</p>
<p>@Html.ActionLink("Back to Client list", "Index")</p>