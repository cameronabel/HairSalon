@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Specialties</h1>
<hr/>

@if (@Model.Count == 0)
{
  <h3>No specialties added yet!</h3>
}

@foreach (Specialty specialty in Model)
{
  <li>@Html.ActionLink($"{specialty.Name}", "Details", new {id = specialty.SpecialtyId})</li>
}
<br>
<p>@Html.ActionLink("Add a specialty", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>