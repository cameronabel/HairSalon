@{
    Layout = "_Layout";
}

@model HairSalon.Models.Specialty

<h4>Add New Specialty</h4>
<hr/>
@using (Html.BeginForm())
{
  @Html.TextBoxFor(model => model.Name, null, new {autofocus="autofocus", required="required", @class="text-input", placeholder="Service Name"})
  <br>
  <input type="submit" value="Add this specialty" class="btn btn-primary" />
}

<br>
<p>@Html.ActionLink("Show all specialties", "Index")</p>